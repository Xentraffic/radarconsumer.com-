    <script>
        // Keep startChat exactly the same
        function startChat() {
            setTimeout(() => {
                document.getElementById('initTyping').classList.add('hidden');
                document.getElementById('msg1').classList.remove('hidden');
                
                setTimeout(() => {
                    document.getElementById('msg2').classList.remove('hidden');
                    setTimeout(() => {
                        document.getElementById('msg3').classList.remove('hidden');
                        setTimeout(() => {
                            document.getElementById('msg4').classList.remove('hidden');
                        }, 1000);
                    }, 1000);
                }, 1000);
            }, 2000);
        }

        function showTyping(blockId) {
            const typingDiv = document.createElement('div');
            typingDiv.className = 'ml-3 agent-chat';
            typingDiv.innerHTML = `
                <div class="bg-gray-200 p-3 rounded-lg shadow-xs mt-2 inline-block">
                    <div class="typing-animation">
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    </div>
                </div>
            `;
            document.getElementById(blockId).appendChild(typingDiv);
            return typingDiv;
        }

        function showMessagesSequentially(messages, blockId) {
            const typing = showTyping(blockId);
            setTimeout(() => {
                if (typing && typing.parentNode) {
                    typing.parentNode.removeChild(typing);
                }
                let delay = 0;
                messages.forEach((msgId) => {
                    setTimeout(() => {
                        if (msgId === 'msg14') {
                            document.getElementById('msg14').classList.remove('hidden');
                            document.getElementById('msg14approved').classList.remove('hidden');
                        } else {
                            document.getElementById(msgId).classList.remove('hidden');
                        }
                    }, delay);
                    delay += 1000;
                });
            }, 4000);
        }

        function handleChatButton(step, value) {
            // Disable all buttons in the current step
            const currentButtons = document.querySelectorAll(`[data-form-step="${step}"]`);
            currentButtons.forEach(button => {
                button.style.pointerEvents = 'none';
                button.style.opacity = '0.5';
            });

            if (value.toLowerCase() === 'no') {
                switch(step) {
                    case 1:
                        document.getElementById('userBlock1').classList.remove('hidden');
                        break;
                    case 2:
                        document.getElementById('userBlock2').classList.remove('hidden');
                        document.getElementById('msg9yes').classList.add('hidden');
                        document.getElementById('msg9no').classList.remove('hidden');
                        break;
                    case 3:
                        document.getElementById('userBlock3').classList.remove('hidden');
                        document.getElementById('msg12yes').classList.add('hidden');
                        document.getElementById('msg12no').classList.remove('hidden');
                        break;
                }
                document.getElementById('agentBlock4').classList.remove('hidden');
                showMessagesSequentially(['msg18', 'msg19'], 'agentBlock4');
                return;
            }

            switch(step) {
                case 1:
                    document.getElementById('userBlock1').classList.remove('hidden');
                    document.getElementById('agentBlock2').classList.remove('hidden');
                    showMessagesSequentially(['msg6', 'msg7', 'msg8'], 'agentBlock2');
                    break;

                case 2:
                    document.getElementById('userBlock2').classList.remove('hidden');
                    document.getElementById('msg9yes').classList.remove('hidden');
                    document.getElementById('agentBlock3').classList.remove('hidden');
                    showMessagesSequentially(['msg10', 'msg11'], 'agentBlock3');
                    break;

                case 3:
                    document.getElementById('userBlock3').classList.remove('hidden');
                    document.getElementById('msg12yes').classList.remove('hidden');
                    document.getElementById('agentBlock4').classList.remove('hidden');
                    showMessagesSequentially(['msg13', 'msg14', 'msg14approved', 'msg17'], 'agentBlock4');
                    const callButton = document.getElementById('PrimaryNumber');
                    callButton.onclick = function() {
                        window.location.href = 'tel:8332361046';
                    };
                    break;
            }
        }

        // Keep these exactly the same
        document.querySelectorAll('.chat-button').forEach(button => {
            button.addEventListener('click', function() {
                const step = parseInt(this.getAttribute('data-form-step'));
                const value = this.getAttribute('data-form-value');
                handleChatButton(step, value);
            });
        });

        window.addEventListener('load', startChat);
    </script>

