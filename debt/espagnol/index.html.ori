    <script>
    (function () {
        let customers = [
            'Mateo Garcia', 
            'Santiago Rodriguez', 
            'Elena Ramirez', 
            'Alejandro Sanchez', 
            'Daniel Ramirez', 
            'Isabella Rivera', 
            'Valeria Gonzalez', 
            'Gabriela Hernandez', 
            'Carlos Ortiz', 
            'Mariana Alvarez',
            'Ana Diaz'
        ];
        let approvedAmounts = [];
        let oAvatar = $("#social-proof-avatar");
        let oCustomer = $("#social-proof-customer");
        let oInformation = $("#social-proof-customer-info");
        let oContainer = $("#custom-social-proof");
        let lastIndex = -1; // Keep track of last shown customer

        // Generate random approval amounts
        for (let customer of customers) {
            approvedAmounts.push(Math.floor(Math.random() * (46400 - 15000 + 1)) + 15000);
        }

        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        function getRandomIndex(max, lastUsed) {
            let newIndex;
            do {
                newIndex = Math.floor(Math.random() * max);
            } while (newIndex === lastUsed);
            return newIndex;
        }

        function updateSocial() {
            let index = getRandomIndex(customers.length, lastIndex);
            lastIndex = index; // Save this index for next time
            
            let customer = customers[index];
            let approved = Math.floor(Math.random() * (46400 - 15000 + 1)) + 15000; // Generate new random amount each time
            let avatar = customer.split(" ")[0];

            oAvatar.attr("src", "images/" + avatar.toLowerCase() + ".jpg");
            oCustomer.html(customer);
            oInformation.html("Acabo de eliminar $" + formatNumber(approved) + " en deudas");
        }

        setInterval(function () {
            if (oContainer.is(':hidden')) {
                oContainer.stop().slideToggle('slow');
                updateSocial();
            } else {
                oContainer.stop().slideToggle('slow');
            }
        }, 6500);
    })();
    </script>

